<div class="d-flex flex-column align-items-center justify-content-center">
    <div class="row">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">@Title</span>
        </div>
    </div>
    <div class="row">
        @Title
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Loading...";
}